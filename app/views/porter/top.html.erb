<header>
  <div class="header-content">
    <div class="header-content-inner">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h1 id="homeHeading"><%= t '.toptitle'%></h1>
          <p class="fine"><%= t '.subtitle'%></p>
          <div class="form-inline">
            <div class="form-group">
              <%= search_form_for @search, url: demandposts_path, method: :get do |f| %>
              <%= f.country_select :country_from_eq, {priority: %w(US CA), prompt: t('.fromcountrytab')}, class: "form-control" %>
              <%= f.text_field :city_to_cont, id: "city_to", class: "form-control", placeholder: t('.tocitytab') %>
              <%= f.submit t('.searchbutton'), class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</header>

<div class="section-howto">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading"><%= t '.howtotitle'%></h2>
        <hr class="primary">
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box">
          <i class="fa fa-4x fa-search text-primary sr-icons"></i>
          <h3><%= t '.howtohead1'%></h3>
          <p class="text-muted"><%= t '.howtocontent1'%></p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box">
          <i class="fa fa-4x fa-suitcase text-primary sr-icons"></i>
          <h3><%= t '.howtohead2'%></h3>
          <p class="text-muted"><%= t '.howtocontent2'%></p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box">
          <i class="fa fa-4x fa-plane text-primary sr-icons"></i>
          <h3><%= t '.howtohead3'%></h3>
          <p class="text-muted"><%= t '.howtocontent3'%></p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <div class="service-box">
          <i class="fa fa-4x fa-handshake-o text-primary sr-icons"></i>
          <h3><%= t '.howtohead4'%></h3>
          <p class="text-muted"><%= t '.howtocontent4'%></p>
        </div>
      </div>
    </div>
  </div>
</div>
