<div class="body-padding">
  <div class="section-top">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h3><%= t 'top._signed.toptitle'%></h2>
        <p class="fine"><%= t 'top._signed.subtitle'%></p>
        <%= link_to  t('top._signed.titlebutton'), new_demandpost_path, class:"btn btn-primary btn-large center-block" %>
      </div>
    </div>
  </div>

  <div class="section-tips">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h3><%= t 'top._signed.tipstitle'%></h3>
          <hr class="primary">
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-4 text-center">
          <div class="service-box">
            <h4><%= t 'top._signed.tipshead1'%></h4>
            <p class="fine"><%= t 'top._signed.tipscontent1'%></p>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 text-center">
          <div class="service-box">
            <h4><%= t 'top._signed.tipshead2'%></h4>
            <p class="fine"><%= t 'top._signed.tipscontent2'%></p>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 text-center">
          <div class="service-box">
            <h4><%= t 'top._signed.tipshead3'%></h4>
            <p class="fine"><%= t 'top._signed.tipscontent3'%></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="section-link-porter">
    <div class="section-link-porter-content">
      <div class="container">
        <div class="row">
          <div class="col-lg-3 col-xs-6 col-lg-offset-1 col-xs-offset-3">
            <h3><%= t 'top._signed.porterlinktitle'%></h3>
            <p class="fine"><%= t 'top._signed.porterlinkcontent'%></p>
            <%= link_to  t('top._signed.porterlinkbutton'), porter_top_path, class:"btn btn-primary btn-xl"%>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="section-howto">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading"><%= t 'top._signed.howtotitle'%></h2>
          <hr class="primary">
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box">
            <i class="fa fa-4x fa-edit text-primary sr-icons"></i>
            <h3><%= t 'top._signed.howtohead1'%></h3>
            <p class="text-muted"><%= t 'top._signed.howtocontent1'%></p>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box">
            <i class="fa fa-4x fa-suitcase text-primary sr-icons"></i>
            <h3><%= t 'top._signed.howtohead2'%></h3>
            <p class="text-muted"><%= t 'top._signed.howtocontent2'%></p>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box">
            <i class="fa fa-4x fa-plane text-primary sr-icons"></i>
            <h3><%= t 'top._signed.howtohead3'%></h3>
            <p class="text-muted"><%= t 'top._signed.howtocontent3'%></p>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box">
            <i class="fa fa-4x fa-handshake-o text-primary sr-icons"></i>
            <h3><%= t 'top._signed.howtohead4'%></h3>
            <p class="text-muted"><%= t 'top._signed.howtocontent4'%></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <aside class="bg-ghostwhite">
    <div class="container text-center">
      <div class="call-to-action">
        <h3><%= t 'top._signed.legaltitle'%></h3>
        <p class="fine"><%= t 'top._signed.legalcontent'%></p>
      </div>
    </div>
  </aside>

  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-lg-offset-4 text-center">
        <i class="fa fa-envelope-o fa-3x sr-contact"></i>
        <p>
          <a href="mailto:feedback@courcie.com">feedback@courcie.com</a>
        </p>
      </div>
    </div>
  </div>
</div>
